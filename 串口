 #include "reg51.h"

 typedef unsigned int u16;
 typedef unsigned char u8;

 void csh()
 {
   TMOD=0x20;//选择T1定时器
   TH1=0xf3;//控制
   TL1=0xf3;// 定时时间
   PCON=0x80;//波特率加倍
   TR1=1;//打开定时器1
   SCON=0x50;//选择工作方式
   ES=1;//打开串口开关
   EA=1;//打开总开关
 
 }
 void main()
 {
 	csh();//进行初始化

 
 }
